<robot  xmlns:xacro="http://www.ros.org/wiki/xacro"
        xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
        xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
        xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
        name="reem" >

  <!-- The following included files set up definitions of parts of the robot body -->

  <!-- Torso -->
  <include filename="$(find reem_description)/urdf/torso/torso.urdf.xacro" />

  <!-- Generic simulator_gazebo plugins -->
  <include filename="$(find reem_description)/gazebo/gazebo.urdf.xacro" />
  <!-- Materials for visualization -->
  <include filename="$(find reem_description)/urdf/materials.urdf.xacro" />

  <link name="base_footprint">
    <inertial>
      <mass value="50.0" />
      <origin xyz="0 0 0.1"/>
      <inertia ixx="1.2083" ixy="0.0" ixz="0.0"
                iyy="1.2083" iyz="0.0" izz="2.0833" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.2" />
      </geometry>
      <material name="White" />
    </visual>
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.2" />
      </geometry>
    </collision>
  </link>

  <!-- Torso -->
  <xacro:reem_torso name="torso" parent="base_footprint"/>

</robot>


