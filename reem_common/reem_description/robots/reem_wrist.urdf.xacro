<robot  xmlns:xacro="http://www.ros.org/wiki/xacro"
        xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
        xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
        xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
        name="reem" >

  <!-- The following included files set up definitions of parts of the robot body -->

  <!-- Wrist -->
  <include filename="$(find reem_description)/urdf/arm/wrist.urdf.xacro" />

  <!-- Generic simulator_gazebo plugins -->
  <include filename="$(find reem_description)/gazebo/gazebo.urdf.xacro" />
  <!-- Materials for visualization -->
  <include filename="$(find reem_description)/urdf/materials.urdf.xacro" />

  <!-- Fixed structure -->
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0.30" rpy="0 ${90.0 * deg_to_rad} 0" />
    <child link="base_link" />
    <parent link="base_footprint"/>
  </joint>

  <link name="base_footprint">
    <inertial>
      <mass value="50.0" />
      <origin xyz="0 0 0"/>
      <inertia ixx="1.2083" ixy="0.0" ixz="0.0"
                iyy="1.2083" iyz="0.0" izz="2.0833" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.2" />
      </geometry>
      <material name="White" />
    </visual>
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.2" />
      </geometry>
    </collision>
  </link>

  <link name="base_link">
  <inertial>
      <mass value="20.0" />
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" /> <!--NOTE: Point mass-->
    </inertial>
    <visual>
      <origin xyz="0 0.02 0" rpy="0 ${90.0 * deg_to_rad} 0" /> <!--NOTE: 0.02 is a REEM-specific offset-->
      <geometry>
        <cylinder radius="0.05" length="0.2"/>
      </geometry>
      <material name="White" />
    </visual>
    <collision>
      <origin xyz="0 0.02 0" rpy="0 ${90.0 * deg_to_rad} 0" /> <!--NOTE: 0.02 is a REEM-specific offset-->
      <geometry>
        <cylinder radius="0.05" length="0.2"/>
      </geometry>
    </collision>
  </link>

  <!-- Right wrist -->
  <xacro:reem_wrist name="arm" parent="base_link" side="right" reflect="1.0"  />

</robot>


